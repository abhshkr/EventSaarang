<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
<ImageView
    android:id="@+id/iv_eventListBg"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:scaleType="centerCrop"
    android:tint="#40000000"
    android:src="@drawable/saarang"
    android:layout_marginBottom="1dp"/>
    <TextView
        android:id="@+id/tv_eventListSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Word Forming Event"
        android:layout_alignLeft="@id/iv_eventListBg"
        android:layout_alignBottom="@id/iv_eventListBg"
        android:background="#80000000"
        android:paddingLeft="16dp"
        android:textSize="12sp"
        android:paddingBottom="12dp"
        android:textColor="#FFFFFF"
        />
    <TextView
        android:id="@+id/tv_eventListTitle"
        android:background="#80000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_eventListBg"
        android:layout_above="@id/tv_eventListSubtitle"
        android:textSize="28sp"
        android:text="Scrabble"
        android:gravity="top"
        android:paddingTop="8dp"
        android:textColor="#FFFFFF"
        android:paddingLeft="16dp"
        />

    <ImageView
        android:id="@+id/iv_eventListStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_eventListTitle"
        android:layout_alignBottom="@id/tv_eventListSubtitle"
        android:src="@drawable/ic_star_border_white_24dp"
        android:tint="#FFFFD700"
        android:layout_alignRight="@id/iv_eventListBg"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"/>
    <ImageView
        android:id="@+id/iv_eventListMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_eventListTitle"
        android:layout_alignBottom="@id/tv_eventListSubtitle"
        android:src="@drawable/ic_place_white_24dp"
        android:tint="#AAD50000"
        android:layout_toLeftOf="@id/iv_eventListStar"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        />
</RelativeLayout>