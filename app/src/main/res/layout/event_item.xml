<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    app:cardBackgroundColor="@color/cardview_light_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <!--Main picture-->
        <ImageView
            android:id="@+id/ib_event1"
            android:layout_width="168dp"
            android:layout_height="168dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/saarang_raagapella" />
        <!--Star for favorites-->
        <ImageView
            android:id="@+id/iv_eventStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/ib_event1"
            android:layout_below="@id/ib_event1"
            android:layout_marginRight="8dp"
android:layout_marginTop="8dp"
            android:tint="#FFD4AF37"
            android:src="@drawable/ic_star_border_white_24dp" />
<!--Title-->
        <TextView
            android:id="@+id/tv_eventTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/ib_event1"
            android:layout_below="@id/ib_event1"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="2dp"
            android:layout_alignTop="@id/iv_eventStar"
            android:layout_marginLeft="8dp"
            android:layout_toLeftOf="@id/iv_eventStar"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Event 1"
            android:textSize="18sp"
            android:textColor="#333333"/>
<!--Description-->
        <TextView
            android:id="@+id/tv_eventDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/ib_event1"
            android:layout_alignRight="@id/ib_event1"
            android:layout_below="@id/tv_eventTitle"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="This is a small desciption about an event in Saarang."
            android:textSize="12sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
